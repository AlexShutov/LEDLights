<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="model"
            type="alex_shutov.com.ledlights.bluetoothmodule.bluetooth.logic.establish_connection.strategies.select_another_device_strategy.databinding.DeviceInfoViewModel"
            />
    </data>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools">

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/device_info_margin_top"
            android:layout_marginBottom="@dimen/device_info_margin_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/device_info_height"
            app:cardCornerRadius="@dimen/device_info_card_corner_radius"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            card_view:cardUseCompatPadding="true"
            android:clipToPadding="false"
            app:cardElevation="7dp"
            app:cardBackgroundColor="@color/blue_500"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--device info button-->
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/di_details"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/device_info_expand_btn_margin_top"
                    android:layout_marginLeft="@dimen/device_info_expand_btn_margin_left"
                    android:src="@drawable/ic_details"
                    android:onClick="@{(v) -> model.showDeviceDetailsListener.onClick(v)}"
                    />
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:id="@+id/di_device_name"
                    fontPath="fonts/open-sans/OpenSans-Bold.ttf"
                    android:textSize="@dimen/device_info_device_name_text_size"
                    android:hint="@string/device_name_hint"
                    android:text="@{model.deviceName}"
                    android:textColor="?android:textColorPrimaryInverse"
                    />

                <!--container for device kind indicators (history, paired)-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="4dp"
                    >
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_device_from_history"
                        android:visibility="@{model.deviceFromHistory ? View.VISIBLE : View.GONE}"
                        />
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/ic_paired_phone"
                        android:visibility="@{model.pairedDevice ? View.VISIBLE : View.GONE}"
                        />
                </LinearLayout>

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </FrameLayout>

</layout>

